<div class="flex flex-col space-y-2 shrink">
  <h2>Users online <%= Enum.count(@users) %>:</h2>
  <%= for {user_id, user} <- @users do %>
    <%= if user_id == @current_user[:id] do %>
      <span class="text-xs bg-green-200 rounded px-2 py-1 w-80"><%= user[:name] %> (me)</span>
    <% else %>
      <span class="text-xs bg-blue-200 rounded px-2 py-1 w-80"><%= user[:name] %></span>
    <% end %>
  <% end %>
</div>
